<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/card_item_margin_start"
            android:adjustViewBounds="true"
            android:lines="1"
            />

        <TextView
            android:id="@+id/card_item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_item_name"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/card_item_margin_start"
            android:adjustViewBounds="true"
            android:lines="1"
            />

        <TextView
            android:id="@+id/card_item_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:layout_marginEnd="@dimen/card_item_margin_end"
            android:adjustViewBounds="true"
            android:lines="1"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>